
<% layout('layout') %>

<h1><%= title %></h1>

<div class="row">

  <div class="col-sm-6">
    <form action="/speech/text_to" method="POST">
      <div class="form-group">
        <label>Language:</label>
        <select name="language" class="form-control">
          <option value="en-US" selected>en-US</option>
          <option value="ja-JP">ja-JP</option>
          <option value="vi-VN">vi-VN</option>
        </select>
      </div>

      <div class="form-group">
        <label>Text:</label>
        <textarea name="text" row="5" class="form-control"></textarea>
      </div>

      <button type="submit" class="btn btn-info">Submit</button>
    </form>
  </div>

  <div class="col-sm-6">
    <% if (data.datauri) { %>
      <audio style="width: 100%" src="<%= data.datauri.content %>" controls></audio>
    <% } %>
  </div>

</div>

<div class="row" style="margin-top: 20px;">
  <div class="col-sm-12">
    <% if (data.error) { %>
      <label>API call Failed</label>
      <pre class="bg-danger"><code><%= data.error %></code></pre>
    <% } %>

    <% if (data.result) { %>
      <label>API call succeeded</label>
      <pre class="bg-success"><code><%= data.result %></code></pre>
    <% } %>
  </div>
</div>

